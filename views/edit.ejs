<h2>Submit a new entry</h2>
<br>
<form
    action="/rivets/<%=Rivets.get('id')%>/edit"
    method="post"
  >
    <label>Name: </label>
    <input type='text' name='name' value='<%= Rivets.get('name') %>'/>
    <br>
    <label>Material: </label>
    <input type='text' name='material' value='<%= Rivets.get('material') %>'/>
    <br>
    <label>Shape: </label>
    <input type='text' name='shape' value='<%= Rivets.get('shape') %>'/>
    <br>
    <label>Size: </label>
    <input type='text' name='size' value='<%= Rivets.get('size') %>'/>
    <br>
    <label>Summary: </label>
    <input type='text' name='summary' value='<%= Rivets.get('summary') %>'/>
    <br>
    <input type='submit' value='Edit Rivet' />
  </form>
<br>
<a href="/">TAKE ME HOME </a>
